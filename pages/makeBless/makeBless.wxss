/* index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #FFD700; /* gold */
}

.background {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.form {
  width: 100%;
  margin-bottom: 20px;
}

.input-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  border-bottom: 1px solid #FF0000; /* red */
}

.input-label {
  color: #FF0000; /* red */
  width: 50px;
}

.input {
  flex-grow: 1;
  transition: all 0.3s ease;
}

.input:focus {
  outline: none;
  border-bottom: 2px solid #FFD700; /* gold */
}

.submit-button {
  width: 100%;
  background-color: #FF0000; /* red */
  color: #FFFFFF; /* white */
  border: none;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  transition-duration: 0.4s;
  cursor: pointer;
}

.submit-button:hover {
  background-color: #FFD700; /* gold */
  color: #FF0000; /* red */
}

.response-container {
  display: flex;
  justify-content: center;
}
